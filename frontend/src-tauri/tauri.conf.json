{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "meeting-minutes-frontend",
  "version": "0.1.0",
  "identifier": "com.meetily.ai",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3118",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "meetily",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "theme": "Light",
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main",
          "description": "Main window capability with file system access",
          "windows": ["main"],
          "permissions": [
            "fs:default",
            "fs:allow-read-file",
            "fs:read-all",
            "fs:write-all",
            "fs:allow-app-read",
            "fs:allow-app-write",
            "fs:allow-download-write",
            "fs:allow-download-read",
            "fs:scope-download",
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:app:default",
            "core:resources:default",
            "core:menu:default",
            "core:tray:default",
            "core:window:allow-set-title"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
